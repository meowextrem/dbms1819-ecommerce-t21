<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Orders
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      
		
		<div class="box box-success">
            <div class="box-header with-border">
              <h3 class="box-title">Order List</h3>
			  <span class="btn btn-sm btn-primary pull-right hidden" id="addUserbtn" style="margin-right:5px" onclick="location.href='/brand/create';" >Create Brand</span>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-striped">
                <tr>   
                  <th>Order Date</th>
                  <th>Product Name</th>
				  <th>Quantity</th>
				  <th>Ordered By</th>
                </tr>
				{{#each data}}
                <tr>
				  <td>{{moment this.order_date format="MMMM Do YYYY, dddd , h:mm:ss A"}}</td>
                  <td>{{this.name}}</td>
				  <td>{{this.quantity}}</td>
				  <td>{{this.first_name}} {{this.last_name}}</td>
                  
                </tr>
				{{/each}}
                
                
              
              </table>
            </div>
			
            <!-- /.box-body -->
          </div>
        <div align="center">
			<ul class="pagination center" style="center">
				<li><a href="/admin/orders/{{previous}}">Previous</a></li>
				<li><a href="/admin/orders/1">1</a></li>
				<li><a href="/admin/orders/2">2</a></li>
				<li><a href="/admin/orders/3">3</a></li>
				<li><a href="/admin/orders/{{next}}">Next</a></li>
			</ul>
		   </div>
		<!-- /.box-body -->
         
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>

