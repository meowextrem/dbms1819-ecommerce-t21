<div class="content-wrapper" background="./Profile Page of Benz_files/grid.gif">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        {{prod_name}}
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">

        <div class="box-body" >
		
			<div class="box-body box-profile">
              <img class="img-responsive" src={{prod_image}} alt="User profile picture" style="margin:auto">
              <h3 class="profile-username text-center"><i class="fa fa-tags"></i>{{prod_name}}</h3>
              <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                  <i class="fa fa-money"></i> <b>Price: </b> <a class="pull-right">P{{prod_price}}</a>
                </li>
                <li class="list-group-item">
                  <i class="fa fa-trademark"></i> <b>Brand: </b> <a class="pull-right">{{prod_brand}}</a>
                </li>
				<li class="list-group-item">
                  <i class="glyphicon glyphicon-list-alt"></i> <b>Category/Type: </b> <a class="pull-right">{{prod_type}}</a>
                </li>
				<li class="list-group-item">
                  <i class="glyphicon glyphicon-comment"></i> <b>Description </b>
				  {{#each prod_desc}}
				  <a class="pull-right">{{this}}</a>
				  <br>
				  {{/each}}
				  
                </li>
				</ul>

              
            </div>
        </div>
		
		<div class="box box-success">
            <div class="box-header with-border">
              <h3 class="box-title">Contact Us</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <form role="form" method="post" action="/send-email/{{prod_id}}">
                <!-- text input -->
				<div class="form-group">
                  <label>Product Id</label>
                  <input name="id" type="text" class="form-control" disabled value="{{prod_id}}">
                </div>
                <div class="form-group">
                  <label>Customer Name</label>
                  <input name="cust_name" type="text" class="form-control" placeholder="Enter ...">
                </div>
				<div class="form-group">
                  <label>Phone</label>
                  <input name="phone" type="text" class="form-control" placeholder="Enter ...">
                </div>
				<div class="form-group">
                  <label>Email</label>
                  <input name="email" type="text" class="form-control" placeholder="Enter ...">
                </div>
				<div class="form-group">
                  <label>Quantity</label>
                  <input name="quantity" type="text" class="form-control" placeholder="Enter ...">
                </div>
				<div class="form-group">
				   <button type="submit" class="btn bg-purple margin">Send</button>
                </div>
				

              </form>
            </div>
            <!-- /.box-body -->
          </div>
        
		<!-- /.box-body -->
         </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>