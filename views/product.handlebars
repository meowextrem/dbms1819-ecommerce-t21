<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Products
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h2 class="box-title">Products for Sale</h2>

        </div>
        <div class="box-body">
		
		<div class="box-body">
          <div class="box box-warning">
            <div class="box-header with-border">
              <h3 class="box-title">Product List</h3>

              <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                </button>
              </div>
              <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body">
				{{#each data}}
				<div class="col-md-3 col-sm-6 col-xs-12">
				<a href=/products/{{this.product_id}}>
				<div class="info-box">
				
				<span class="info-box-icon bg-white"><img class="img-responsive" style="height:100%;width:100%" src="{{this.picture}}" alt="Product 1"></span>

				<div class="info-box-content">
				<span class="info-box-text">{{this.name}}</span>
				<span class="info-box-number">P{{this.price}}</span>
				</div>
				
				<!-- /.info-box-content -->
				</div>
				</a>
				<!-- /.info-box -->
				</div>
        <!-- /.col -->
				{{/each}}
				
				
        
        <!-- /.col -->
			</div>
			<div align="center">
			<ul class="pagination center" style="center">
				<li><a href="/productslist/{{previous}}">Previous</a></li>
				<li><a href="/productslist/1">1</a></li>
				<li><a href="/productslist/2">2</a></li>
				<li><a href="/productslist/3">3</a></li>
				<li><a href="/productslist/{{next}}">Next</a></li>
			</ul>
			</div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>

		
		
        </div>
        
		<!-- /.box-body -->
         </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
