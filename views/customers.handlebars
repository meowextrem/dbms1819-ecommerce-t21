<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Customers
      </h1>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      
		
		<div class="box box-success">
            <div class="box-header with-border">
              <h3 class="box-title">Customer List</h3>
			  <span class="btn btn-sm btn-primary pull-right hidden" id="addUserbtn" style="margin-right:5px" onclick="location.href='/brand/create';" >Create Brand</span>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-striped">
                <tr>   
                  <th>Customer Name</th>
                  <th>Options</th>
                </tr>
				{{#each data}}
                <tr>
                   
                  <td>{{this.first_name}} {{this.last_name}}</td>
                  <td><span class="btn btn-sm btn-primary pull-left" id="addUserbtn" style="margin-right:5px" onclick="location.href='/admin/customer/{{this.customer_id}}';" >View Details</span></td>
                  
                </tr>
				{{/each}}
                
                
              
              </table>
            </div>
			
            <!-- /.box-body -->
          </div>
          <div align="center">
			<ul class="pagination center" style="center">
				<li><a href="/admin/customers/{{previous}}">Previous</a></li>
				<li><a href="/admin/customers/1">1</a></li>
				<li><a href="/admin/customers/2">2</a></li>
				<li><a href="/admin/customers/3">3</a></li>
				<li><a href="/admin/customers/{{next}}">Next</a></li>
			</ul>
		   </div>
		<!-- /.box-body -->
         
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
